<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <% end %>
    <%= link_to 'Tweet', new_micropost_path %>
    <%= link_to 'My Profile', new_profile_path %>
  </div>
</div>
